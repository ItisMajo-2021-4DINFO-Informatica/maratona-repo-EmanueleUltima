<Window x:Class="BonaProvaComune5App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BonaProvaComune5App"
        mc:Ignorable="d"
        Title="Maratona" Height="650" Width="800">
    <StackPanel>
        <Button x:Name="BtnLeggiDaFile" Content="Leggi da file" Click="BtnLeggiDaFile_Click"/>
        <DataGrid x:Name="DgElencoAtleti" Height="300" />
        <Label Content="Inserisci il nome dell'atleta:"/>
        <TextBox x:Name="TxtNome" />
        <Label Content="Inserisci il nome della città:"/>
        <TextBox x:Name="TxtCittà" />
        <Label x:Name="LblAtleta" />
        <Button x:Name="BtnCalcolaMinuti" Content="Calcola minuti" Click="BtnCalcolaMinuti_Click"/>
        <Label Content="Inserisci il nome della:"/>
        <TextBox x:Name="TxtAlbum" />
        <Label x:Name="LblNumBrani" />
        <Button x:Name="BtnContaPiloti" Content="Conta Piloti" Click="BtnContaPiloti_Click"/>
        <Label x:Name="LblDurata" />
        
    </StackPanel>
</Window>